<% if @user.errors.any? %>
      <%= @user.errors.count %>prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
<% end %>

<h1>User info</h1>

<%= form_with model: @user, method: :patch do |f| %>
  <h2>Name</h2>
  <%= f.text_field :name %>
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <h2>Introduction</h2>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>

<% end %>


