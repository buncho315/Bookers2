<div class='container mt-3'>
  <div class='row'>
     <div class='col-md-3'>
        <%= render 'users/user_info', user: current_user %>
        <%= render 'books/new_book', book: @new_book %>
     </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Book detail</h2>
     <table class = "table">
      <tbody>
       <tr>
        <td>
        <%= @book.title %>
        </td>
        <td>
        <%= @book.body %>
        </td>
        <td>
        <%= link_to "Edit", edit_book_path(@book) %>
        </td>
        <td>
        <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？" %>
        </td>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
</div>
