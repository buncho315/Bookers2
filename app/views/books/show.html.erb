<div class='container mt-3'>
  <div class='row'>
     <div class='col-md-3'>
        <%= render 'users/user_info', user: current_user %>
        <%= render 'books/new_book', book: @new_book %>
     </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Book detail</h2>
      <table class="table">
       <tbody>
        <tr>
         <td>
          <%= image_tag @user.get_profile_image(100, 100) %>
          <br>
          <!--<%= link_to @user, user_path(@book.id) %> -->15修正
          <p><%= image_tag @user.get_profile_image(100,100) %></p>
         </td>
         <td>
         <%= link_to @book.title, book_path(@book.id) %>
         </td>
         <td>
         <%= @book.body %>
         </td>
         <td>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
         </td>
         <td>
         <%= link_to "Destroy", destroy_book_path(@book.id),class: "btn btn-danger", method: :delete,"data-confirm" => "本当に消しますか？" %>
         </td>
        </tr>
       </tbody>
      </table>
    </div>
   </div>
</div>
