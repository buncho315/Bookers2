<div class='container mt-3'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/user_info', user: current_user %>
      <%= render 'books/new_book', book: @new_book %>
    </div>
    <div class='col-md-8'>
      <h1>Books</h1>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>